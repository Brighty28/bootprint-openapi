{{!--
Renders the info object and other basic information into a table

@param {object} info the info object
@param {string} host the host property
@param {string} basePath the basePath property
@param {string[]} schemes the schemes array
--}}
{{#with info}}
    <h1 data-oai-keywords="info.title">{{title}}</h1>
    {{#if description}}
        <div title="description" data-oai-keywords="info.description">
            {{md description}}
        </div>
    {{/if}}
{{/with}}

<div class="utils-cards">
    {{#if externalDocs}}
        <div id="externalDocs" class="openapi--external-docs utils-card">
            <div class="header">External Docs</div>
            <div class="contents">{{>openapi/externalDocs}}</div>
        </div>
    {{/if}}
    {{#with info}}
        {{#if termsOfService}}
            <div class="openapi--terms-of-service utils-card" data-oai-keywords="info.termsOfService">
                <div class="header">Terms of Service</div>
                <div class="contents"><a href="{{termsOfService}}">{{termsOfService}}</a></div>
            </div>
        {{/if}}
        {{#with license}}
            <div class="openapi--license utils-card" data-oai-keywords="info.license">
                <div class="header">License Information</div>
                <div class="contents">
                    {{#if url}}
                        <a href="{{url}}">{{url}}</a>
                    {{/if}}
                </div>
                <div class="contents">
                    {{name}}
                </div>
            </div>
        {{/with}}
        {{#with contact}}
            <div class="openapi--contacts utils-card" data-oai-keywords="info.contact">
                <div class="header">Contact information</div>
                <div class="contents">{{name}}</div>
                {{#if url}}
                    <div class="contents"><a href="{{url}}">{{url}}</a></div>{{/if}}
                {{#if email}}
                    <div class="contents"><a href="mailto:{{email}}">{{email}}</a></div>{{/if}}
            </div>
        {{/with}}
    {{/with}}
</div>
